<!DOCTYPE html>
<html>
  <head>
    <title>LunchReviewer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color:black;">

    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <h3><%= error%></h3>
      <% end%>
    <% end%>
        <% if @current_user%>
    <h5><%= link_to "Logout", logout_path, method: :delete %></h5>
    <% end%>

    <center>
    <%= yield %>
    </center>
  </body>
</html>
